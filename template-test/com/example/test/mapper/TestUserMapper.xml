<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.test.mapper.TestUserMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.example.test.entity.TestUser">
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, username, email
    </sql>

    <!-- 查询所有测试用户表 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM test_user
    </select>

    <!-- 根据ID查询测试用户表 -->
    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM test_user
        WHERE id = #{id}
    </select>

    <!-- 新增测试用户表 -->
    <insert id="insert" parameterType="com.example.test.entity.TestUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO test_user
        (
            username,
            email
        )
        VALUES
        (
            #{username},
            #{email}
        )
    </insert>

    <!-- 更新测试用户表 -->
    <update id="update" parameterType="com.example.test.entity.TestUser">
        UPDATE test_user
        SET
        
        username = #{username}
        ,
        email = #{email}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除测试用户表 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM test_user
        WHERE id = #{id}
    </delete>

    <!-- 分页查询测试用户表 -->
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM test_user
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 根据条件查询测试用户表 -->
    <select id="selectByCondition" parameterType="com.example.test.entity.TestUser" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM test_user
        <!-- 条件查询需要根据具体需求手动修改 -->
    </select>

    <!-- 统计总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM test_user
    </select>

    <!-- 根据条件统计数量 -->
    <select id="countByCondition" parameterType="com.example.test.entity.TestUser" resultType="long">
        SELECT COUNT(*) FROM test_user
        <!-- 条件统计需要根据具体需求手动修改 -->
    </select>

</mapper>